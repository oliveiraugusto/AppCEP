<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCEP.Pages.Menu.SobrePage"
             BackgroundImage="background">
    <ContentPage.Content>
        <StackLayout>
            <Label VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand"
                   x:Name="labelSobre"
                   TextColor="White"
                   Margin="20"/>
            
            <Button Text="Visite o site do Senac Botucatu"
                    x:Name="buttonVisiteSenacBotucatu"
                    Clicked="ButtonVisiteSenacBotucatu_Clicked"
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="#20567c"
                    TextColor="White"
                    BorderRadius="8"
                    Margin="5,5"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>